generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum MachineType {
  L   // Low
  M   // Medium
  H   // High

  @@map("machine_type")
}

enum MachineStatus {
  operational
  maintenance
  offline
  retired

  @@map("machine_status")
}

enum MessageRole {
  user
  assistant

  @@map("message_role")
}

enum UserRole {
  admin
  operator
  viewer

  @@map("user_role")
}

model User {
  id            String         @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  email         String         @unique
  fullName      String?        @map("full_name")
  role          UserRole       @default(operator)
  isActive      Boolean        @default(true) @map("is_active")
  createdAt     DateTime       @default(now()) @map("created_at")
  updatedAt     DateTime       @updatedAt @map("updated_at")

  // Relations
  chatMessages  ChatMessage[]

  @@index([email])
  @@map("users")
}

model Machine {
  id                  String         @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  productId           String         @unique @map("product_id")
  type                MachineType
  name                String?
  description         String?
  location            String?
  installationDate    DateTime?      @map("installation_date")
  lastMaintenanceDate DateTime?      @map("last_maintenance_date")
  status              MachineStatus  @default(operational)
  createdAt           DateTime       @default(now()) @map("created_at")
  updatedAt           DateTime       @updatedAt @map("updated_at")
  
  // Relations
  sensorReadings      SensorData[]
  predictions         PredictionResult[]

  @@index([productId])
  @@index([status])
  @@index([type])
  @@map("machines")
}

model SensorData {
  udi             Int      @id @default(autoincrement())
  machineId       String   @db.Uuid @map("machine_id")
  productId       String?  @map("product_id")
  timestamp       DateTime @default(now())
  airTemp         Float    @map("air_temp")
  processTemp     Float    @map("process_temp")
  rotationalSpeed Int      @map("rotational_speed")
  torque          Float
  toolWear        Int      @map("tool_wear")
  createdAt       DateTime @default(now()) @map("created_at")
  
  // Relations
  machine         Machine  @relation(fields: [machineId], references: [id], onDelete: Cascade)

  @@index([machineId, timestamp])
  @@index([timestamp])
  @@map("sensor_readings")
}

model PredictionResult {
  id                    String    @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  machineId             String    @db.Uuid @map("machine_id")
  timestamp             DateTime  @default(now())
  riskScore             Float     @map("risk_score")              // 0-1 (0 = no risk, 1 = high risk)
  failurePredicted      Boolean   @map("failure_predicted")
  failureType           String?   @map("failure_type")            // "Heat Dissipation", "Power Failure", "Overstrain", "Tool Wear", "Random Failures"
  anomalyDetected       Boolean   @default(false) @map("anomaly_detected")
  predictedFailureTime  DateTime? @map("predicted_failure_time")  // Estimasi waktu failure
  confidence            Float?                                    // ML model confidence (0-1)
  createdAt             DateTime  @default(now()) @map("created_at")
  
  // Relations
  machine               Machine   @relation(fields: [machineId], references: [id], onDelete: Cascade)

  @@index([machineId, timestamp])
  @@index([timestamp])
  @@index([failurePredicted])
  @@index([riskScore])
  @@map("prediction_results")
}

model ChatMessage {
  id             String       @id @db.Uuid @default(dbgenerated("gen_random_uuid()"))
  userId         String       @db.Uuid @map("user_id")
  role           MessageRole
  content        String       @db.Text
  createdAt      DateTime     @default(now()) @map("created_at")
  
  // Relations
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([createdAt])
  @@map("chat_messages")
}

